<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>build</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>custom</baseDirectory>
<!-- 
	<moduleSets>
		<moduleSet>
			<binaries>
       		<includes>
				<include>cyanspring-common</include>
				<include>cyanspring-strategy</include>
				<include>slf4j-api</include>
			</includes>
			</binaries>
		</moduleSet>
	</moduleSets>
 -->	

	<dependencySets>
		<dependencySet>
			<outputDirectory></outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>false</unpack>
			<scope>compile</scope>
			<includes>
				<include>*:cyanspring-common</include>
				<include>*:cyanspring-strategy</include>
				<include>*:slf4j-api</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<outputDirectory></outputDirectory> 
			<includes>
				<include>src/**</include>
				<include>build.xml</include>
			</includes>
		</fileSet>    
		<fileSet>
			<outputDirectory></outputDirectory> 
			<directory>export</directory>
			<includes>
				<include>.classpath</include>
				<include>.project</include>
			</includes>
		</fileSet>    
	</fileSets>
</assembly>
