<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>build</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>build</baseDirectory>
	
	<moduleSets>
		<moduleSet>
			<includes>
				<include>com.cyanspring.server:cyanspring-server</include>
				<include>com.cyanspring.custom:cyanspring-custom</include>
			</includes>
		</moduleSet>
	</moduleSets>
</assembly>
